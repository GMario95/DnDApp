<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="@dimen/character_panel_height"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background_square_panel"
    android:layout_margin="@dimen/common_margin">

    <RelativeLayout
        android:id="@+id/layout_active_panel"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageview_character_class"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/icons8_witch_96"
            android:alpha="0.15"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="@dimen/common_margin_half"/>

        <TextView
            android:id="@+id/textview_character_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/common_margin_half"
            android:textSize="28sp"
            android:fontFamily="serif\"
            tools:text="Melzar" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textview_character_class"
            tools:text="Wizard"
            android:textSize="28sp"
            android:fontFamily="serif"
            android:layout_alignParentEnd="true"
            android:layout_margin="@dimen/common_margin_half"
            android:layout_marginStart="@dimen/common_margin_half"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textview_character_level"
            tools:text="5"
            android:fontFamily="serif"
            android:textSize="64sp"
            android:layout_centerInParent="true"
            android:layout_margin="@dimen/common_margin_half"/>

    </RelativeLayout>

    <ImageView
        android:id="@+id/imageview_new_char"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_add_black_48dp"
        android:visibility="gone"
        android:layout_centerInParent="true"/>

</RelativeLayout>